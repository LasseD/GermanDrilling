
{
  "name": "German Drilling",
  "description": "Click the correct German words. Track your progress as you learn.",
  "version": "1.0",
  "manifest_version": 1,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/de16.png",
      "32": "/images/de32.png",
      "48": "/images/de48.png",
      "128": "/images/de128.png"
    }
  },
  "icons": {
    "16": "/images/de16.png",
    "32": "/images/de32.png",
    "48": "/images/de48.png",
    "128": "/images/de128.png"
  },
  "options_page": "options.html"
}
